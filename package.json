{
  "name": "zero-waste-quiz",
  "version": "0.0.1",
  "description": "Sıfır Atık konusunda AI destekli sesli yarışma uygulaması",
  "author": "Zero Waste Team",
  "license": "MIT",
  "type": "module",
  "private": true,
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "dev:wrangler": "wrangler dev src/index.ts",
    "dev:frontend": "vite",
    "build": "bun run build:backend && bun run build:frontend",
    "build:backend": "bun build src/index.ts --outdir dist --target bun",
    "build:production": "bun build src/index.ts --outdir dist --target bun --minify",
    "build:frontend": "vite build",
    "start": "bun run dist/index.js",
    "deploy:dev": "wrangler deploy --env development",
    "deploy:prod": "wrangler deploy --env production",
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:e2e": "playwright test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint --fix src/**/*.ts",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "format:check": "prettier --check src/**/*.{ts,js,json}",
    "clean": "bun run clean:dist && bun run clean:cache",
    "clean:dist": "rm -rf dist",
    "clean:cache": "rm -rf .wrangler node_modules/.cache",
    "migrate": "drizzle-kit generate",
    "studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "bun run scripts/apply-migrations.ts",
    "db:seed": "bun run scripts/seed-db.ts",
    "db:push": "drizzle-kit push:sqlite",
    "db:studio": "drizzle-kit studio",
    "postinstall": "bun run type-check"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "drizzle-orm": "^0.29.0",
    "hono": "^4.0.0",
    "jose": "^5.2.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@hono/vite-dev-server": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "@types/bun": "^1.2.21",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "drizzle-kit": "^0.20.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-security": "^1.7.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "wrangler": "^3.0.0"
  }
}

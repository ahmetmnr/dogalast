# ================================================
# Sıfır Atık Yarışması - Environment Variables
# ================================================
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun
# ASLA gerçek değerleri git'e commit etmeyin!

# ================================================
# API Keys (Required)
# ================================================
# OpenAI API anahtarınız (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key-here

# JWT token imzalama için güvenli bir secret key
# Üretmek için: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-key

# Admin panel için ayrı JWT secret (güvenlik için)
ADMIN_JWT_SECRET=different-admin-jwt-secret

# ================================================
# CORS Configuration
# ================================================
# İzin verilen origin'ler (virgülle ayrılmış)
CORS_ORIGINS=https://your-domain.com,https://admin.your-domain.com

# ================================================
# Privacy and GDPR / KVKK
# ================================================
# Ses kaydı saklama süresi (gün cinsinden, 0 = saklanmaz)
AUDIO_RETENTION_DAYS=0

# Genel veri saklama süresi (gün cinsinden)
DATA_RETENTION_DAYS=365

# Transcript (metin dökümü) saklama süresi (gün cinsinden)
TRANSCRIPT_RETENTION_DAYS=30

# KVKK/GDPR uyumluluk modu
GDPR_COMPLIANCE_MODE=true

# ================================================
# Audio and Calibration
# ================================================
# VAD (Voice Activity Detection) otomatik kalibrasyonu
VAD_CALIBRATION_ENABLED=true

# Varsayılan VAD eşik değeri (0.001 - 0.1 arası)
DEFAULT_VAD_THRESHOLD=0.01

# ================================================
# Token Management
# ================================================
# Token yenileme eşiği (0-1 arası, 0.75 = %75'inde yenile)
TOKEN_REFRESH_THRESHOLD=0.75

# OpenAI Realtime API ephemeral token süresi
EPHEMERAL_TOKEN_DURATION=1h

# ================================================
# Performance
# ================================================
# Rate limiting (dakika başına istek sayısı)
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Oturum zaman aşımı (saniye cinsinden)
SESSION_TIMEOUT_SECONDS=1800

# Bir oturumda maksimum soru sayısı
MAX_QUESTIONS_PER_SESSION=10

# Cache TTL (saniye cinsinden)
CACHE_TTL_SECONDS=300

# ================================================
# Logging and Monitoring
# ================================================
# Log seviyesi (debug, info, warn, error)
LOG_LEVEL=info

# Audit log saklama süresi (gün cinsinden, KVKK için 7 yıl = 2555 gün)
AUDIT_LOG_RETENTION_DAYS=2555

# ================================================
# Database (Cloudflare D1)
# ================================================
# Not: D1 database ID'leri wrangler.toml dosyasında tanımlanır
# Development ve production için ayrı database'ler kullanın

# ================================================
# Feature Flags (Optional)
# ================================================
# Yeni özellikleri kontrollü şekilde açmak için
FEATURE_ADMIN_PANEL=true
FEATURE_VOICE_FEEDBACK=true
FEATURE_LEADERBOARD_ANIMATION=true

# ================================================
# External Services (Optional)
# ================================================
# Analytics, monitoring vb. için opsiyonel servisler
# SENTRY_DSN=https://your-sentry-dsn
# ANALYTICS_ID=your-analytics-id

# ================================================
# Development Only
# ================================================
# Sadece development ortamında kullanılacak ayarlar
# DEV_BYPASS_AUTH=false
# DEV_MOCK_OPENAI=false
# DEV_LOG_SQL=false

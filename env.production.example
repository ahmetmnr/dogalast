# Zero Waste Quiz - Production Environment Variables
# Bu dosyayı .env.production olarak kopyalayın ve değerleri güncelleyin

# Node Environment
NODE_ENV=production
PORT=8787

# OpenAI Configuration
OPENAI_API_KEY=your-production-openai-api-key
OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview-2025-06-03

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-for-production-min-32-chars
ADMIN_PASSWORD_HASH=$2b$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/LewKyNiGaKrsCdaE2

# Database (Cloudflare D1)
DATABASE_URL=your-cloudflare-d1-database-url
DB_AUTH_TOKEN=your-cloudflare-d1-auth-token

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# Domain Configuration
FRONTEND_URL=https://quiz.sifiratiketkinligi.com
API_URL=https://api.sifiratiketkinligi.com
WEBSOCKET_URL=wss://api.sifiratiketkinligi.com

# Security Headers
HSTS_MAX_AGE=31536000
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' https://api.openai.com; connect-src 'self' https://api.openai.com wss://api.openai.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' https:; media-src 'self' https:;

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_GLOBAL=1000
RATE_LIMIT_REGISTRATION=5
RATE_LIMIT_TOOLS=60
RATE_LIMIT_ADMIN=30

# Logging
LOG_LEVEL=warn
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600

# Features
ENABLE_CORS=false
ENABLE_WEBSOCKETS=true
ENABLE_REALTIME_API=true

